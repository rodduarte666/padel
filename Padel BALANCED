    <script>
        const wrapLabel = (label) => {
            const maxLength = 16;
            if (label.length <= maxLength) {
                return label;
            }
            const words = label.split(' ');
            const lines = [];
            let currentLine = '';
            for (const word of words) {
                if ((currentLine + ' ' + word).trim().length > maxLength && currentLine !== '') {
                    lines.push(currentLine.trim());
                    currentLine = word;
                } else {
                    currentLine += ' ' + word;
                }
            }
            lines.push(currentLine.trim());
            return lines;
        };

        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
              return label.join(' ');
            } else {
              return label;
            }
        };

        const chartColors = ['#ff595e', '#ffca3a', '#ff924c', '#c5ca30', '#8ac926'];

        const costBreakdownCtx = document.getElementById('costBreakdownChart').getContext('2d');
        new Chart(costBreakdownCtx, {
            type: 'pie',
            data: {
                labels: ['Materials', 'Labour', 'Shipping', 'Machinery', 'Initial Setup'],
                datasets: [{
                    data: [22200, 8160, 7200, 2160, 30280],
                    backgroundColor: chartColors,
                    hoverOffset: 4
                }]
            },
            options: {
                maintainAspectRatio: false,
                plugins: {
                    tooltip: {
                        callbacks: {
                            title: tooltipTitleCallback,
                            label: (context) => {
                                const label = context.label || '';
                                const value = context.parsed;
                                const total = context.dataset.data.reduce((acc, current) => acc + current, 0);
                                const percentage = ((value / total) * 100).toFixed(2);
                                return `${label}: £${value.toLocaleString()} (${percentage}%)`;
                            }
                        }
                    },
                    legend: {
                        position: 'bottom',
                    }
                }
            }
        });

        const revenueProfitCtx = document.getElementById('revenueProfitChart').getContext('2d');
        new Chart(revenueProfitCtx, {
            type: 'bar',
            data: {
                labels: ['Conservative (8.5h/day)', 'Optimistic (11h/day)'],
                datasets: [
                    {
                        label: 'Revenue',
                        data: [102000, 132000],
                        backgroundColor: '#ff595e',
                    },
                    {
                        label: 'Profit',
                        data: [62000, 88000],
                        backgroundColor: '#ffca3a',
                    }
                ]
            },
            options: {
                maintainAspectRatio: false,
                scales: {
                    x: { stacked: true },
                    y: {
                        beginAtZero: true,
                        stacked: true,
                        ticks: {
                            callback: (value) => `£${value.toLocaleString()}`
                        }
                    }
                },
                plugins: {
                    tooltip: { callbacks: { title: tooltipTitleCallback } },
                    legend: {
                        position: 'top',
                    }
                }
            }
        });

        const profitDistributionCtx = document.getElementById('profitDistributionChart').getContext('2d');
        new Chart(profitDistributionCtx, {
            type: 'doughnut',
            data: {
                labels: ['Dividends to Investors (65%)', 'Next Court Fund (25%)', 'Maintenance Fund (10%)'],
                datasets: [{
                    data: [65, 25, 10],
                    backgroundColor: ['#ff595e', '#ffca3a', '#ff924c'],
                    hoverOffset: 4
                }]
            },
            options: {
                maintainAspectRatio: false,
                plugins: {
                    tooltip: { callbacks: { title: tooltipTitleCallback } },
                    legend: {
                        position: 'bottom',
                    }
                }
            }
        });

        const growthCtx = document.getElementById('growthChart').getContext('2d');
        new Chart(growthCtx, {
            type: 'line',
            data: {
                labels: [wrapLabel('Year 1'), wrapLabel('Year 2'), wrapLabel('Year 3'), wrapLabel('Year 4')],
                datasets: [{
                    label: 'Next Court Fund',
                    data: [22000, 44000, 66000, 88000],
                    borderColor: '#8ac926',
                    tension: 0.1,
                    pointBackgroundColor: '#8ac926',
                    fill: false
                }]
            },
            options: {
                 maintainAspectRatio: false,
                 scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                             callback: (value) => `£${value.toLocaleString()}`
                        }
                    }
                },
                plugins: {
                    tooltip: { callbacks: { title: tooltipTitleCallback } },
                    legend: {
                        display: false
                    }
                }
            }
        });
    </script>
